<?xml version="1.0" encoding="utf-8"?>

<ContentPage
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:brownianGraphic="clr-namespace:BrownianMotion.Features.BrownianGraphic"
    x:Class="BrownianMotion.Features.BrownianGraphic.BrownianGraphicPage"
    x:DataType="brownianGraphic:BrownianGraphicPageViewModel"
    Shell.NavBarIsVisible="False"
    BackgroundColor="#1E1E1E">

    <Grid
        Padding="20"
        RowSpacing="20"
        RowDefinitions="Auto, *">

        <Label
            Grid.Row="0"
            Text="Brownian Motion"
            FontAttributes="Bold"
            FontSize="28"
            HorizontalOptions="Center"
            TextColor="#ECF0F1"
            Margin="0,0,0,20" />

        <Grid
            Grid.Row="1"
            ColumnDefinitions="2*,*"
            ColumnSpacing="30">

            <Border
                Grid.Column="0"
                BackgroundColor="#2C2C2C"
                Stroke="#404040"
                StrokeThickness="1"
                StrokeShape="RoundRectangle 12">

                <Grid
                    Padding="15"
                    RowDefinitions="Auto,*">

                    <Label
                        Grid.Row="0"
                        Text="Movimento Browniano"
                        FontSize="16"
                        FontAttributes="Bold"
                        HorizontalOptions="Center"
                        TextColor="#BDC3C7"
                        Margin="0,0,0,10" />

                    <GraphicsView
                        Grid.Row="1"
                        VerticalOptions="Fill"
                        HorizontalOptions="Fill"
                        Drawable="{Binding BrownianMotionDrawable}" />

                </Grid>

            </Border>

            <Border
                Grid.Column="1"
                BackgroundColor="#2C2C2C"
                Stroke="#404040"
                StrokeThickness="1"
                StrokeShape="RoundRectangle 12">

                <ScrollView>

                    <VerticalStackLayout
                        Padding="20"
                        Spacing="20">

                        <Label
                            Text="Parâmetros"
                            FontSize="18"
                            FontAttributes="Bold"
                            HorizontalOptions="Center"
                            TextColor="#ECF0F1" />

                        <VerticalStackLayout
                            Spacing="5">

                            <Label
                                Text="Preço Inicial"
                                FontSize="14"
                                FontAttributes="Bold"
                                TextColor="#BDC3C7" />

                            <Entry
                                Text="{Binding InitialPrice}"
                                Placeholder="100"
                                Keyboard="Numeric"
                                BackgroundColor="#404040"
                                TextColor="#ECF0F1" />

                        </VerticalStackLayout>

                        <VerticalStackLayout
                            Spacing="5">

                            <Label
                                Text="Volatilidade média(%)"
                                FontSize="14"
                                FontAttributes="Bold"
                                TextColor="#BDC3C7" />

                            <Entry
                                Text="{Binding Sigma}"
                                Placeholder="20"
                                Keyboard="Numeric"
                                BackgroundColor="#404040"
                                TextColor="#ECF0F1" />

                        </VerticalStackLayout>

                        <VerticalStackLayout
                            Spacing="5">

                            <Label
                                Text="Retorno Médio (%)"
                                FontSize="14"
                                FontAttributes="Bold"
                                TextColor="#BDC3C7" />

                            <Entry
                                Text="{Binding Mean}"
                                Placeholder="1"
                                Keyboard="Numeric"
                                BackgroundColor="#404040"
                                TextColor="#ECF0F1" />

                        </VerticalStackLayout>

                        <VerticalStackLayout
                            Spacing="5">

                            <Label
                                Text="Tempo (dias)"
                                FontSize="14"
                                FontAttributes="Bold"
                                TextColor="#BDC3C7" />

                            <Entry
                                Text="{Binding NumDays}"
                                Placeholder="252"
                                Keyboard="Numeric"
                                BackgroundColor="#404040"
                                TextColor="#ECF0F1" />

                            <Label
                                Text="Duração da simulação"
                                FontSize="12"
                                TextColor="#95A5A6" />

                        </VerticalStackLayout>

                        <Button
                            Text="Gerar Simulação"
                            Command="{Binding GenerateBrownianMotionCommand}"
                            BackgroundColor="#3498DB"
                            TextColor="White"
                            FontAttributes="Bold"
                            CornerRadius="8"
                            HeightRequest="50"
                            Margin="0,20,0,0" />

                        <Button
                            Margin="0,20,0,0"
                            BackgroundColor="WhiteSmoke"
                            BorderColor="Red"
                            BorderWidth="2"
                            FontAttributes="Bold"
                            CornerRadius="8"
                            HeightRequest="50"
                            Text="Reiniciar"
                            Command="{Binding ResetValuesCommand}"/>

                    </VerticalStackLayout>

                </ScrollView>

            </Border>

        </Grid>

    </Grid>

</ContentPage>